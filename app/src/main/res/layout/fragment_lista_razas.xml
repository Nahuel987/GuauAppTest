<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vista.ListaRazasFragment"
    android:background="@drawable/degradado_limon">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOLA SOY EL FRAGMENTO DE LISTA DE RAZAS"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        />

    <!--  SE ELIMINA BOTON Y SE CAMBIA POR UNO FLOTANTE

    <Button
        android:id="@+id/botonFavoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOTON FAVORITOS"
        android:layout_marginBottom="25dp"/>

        -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:clickable="true"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@android:drawable/btn_star_big_on" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerListaRazas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>




</LinearLayout>